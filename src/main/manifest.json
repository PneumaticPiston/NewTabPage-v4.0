{
    "manifest_version": 3,
    "name": "Custom New Tab Page",
    "version": "1.0.0",
    "description": "Customizes the new tab page with a personalized layout and extra features.",
    "permissions": [
        "storage"
    ],
    "chrome_url_overrides": {
        "newtab": "/pages/ntp/ntp.html"
    },
    "options_page": "/pages/options/options.html",
    "background": {
        "service_worker": "background.js"
    }
}